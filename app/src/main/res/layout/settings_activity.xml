<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_settings_home"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#0FFFFFFF"
        android:onClick="backHome"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconPadding="2dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/button_cards_add"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="176dp"
        android:onClick="addCardsActivity"
        android:text="@string/btn_addCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_category_edit"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:onClick="editCategoryActivity"
        android:text="@string/btn_editCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cards_add" />

    <Button
        android:id="@+id/button_edit_theme"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:onClick="editThemeActivity"
        android:text="@string/btn_editTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_category_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>